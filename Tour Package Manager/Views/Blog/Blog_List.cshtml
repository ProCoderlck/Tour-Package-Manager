
@{
    ViewBag.Title = "Blog_List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/BlogList.js?v=3.6.9"></script>
<div class="content">
    <div style="display: flex; align-items: center; justify-content: space-between;" class="mb-2">
        <h4>Blog Management</h4>
        <div style="display: flex; gap: 10px;">
            <button type="button" class="btn btn-info btn-sm card-title" data-bs-toggle="modal" data-bs-target="#categoryModal">Blog Category</button>
            <a href="~/Blog/Add_Blog" class="btn btn-info btn-sm card-title">Add Blog  </a>
        </div>
    </div>

    <div class="card col-lg-12">
        <div class="card-header">
            <h>Blog List</h>
        </div>
        <div class="card-body card-block">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col" style="text-align:center">Action</th>
                        <th scope="col" style="text-align:center">Auto Id</th>
                        <th scope="col" style="text-align:center">Title</th>

                        <th scope="col" style="text-align:center">Catagory</th>
                        <th scope="col" style="text-align:center">User</th>

                        <th scope="col" style="text-align:center">Image</th>

                    </tr>
                </thead>
                <tbody id="Data">
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Modal -->
<style>
    /* Custom Modal Width */
    .custom-modal {
        max-width: 900px; /* Adjust width as needed */
        width: 50%;
    }
</style>

<div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog custom-modal">
        <!-- Applied Custom Class -->
        <div class="modal-content">
            <div class="modal-header"style="float:inline-end">
                <h5 class="modal-title" id="categoryModalLabel" style="display:inline">Blog Category</h5>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close" style="float:inline-end"></button>
            </div>

            <div class="card-body card-block">
                <form class="mb-3">
                    <div class="row align-items-center">
                        <!-- Category -->
                        <div class="col-lg-5 d-flex align-items-center">
                            <label for="Category" class="form-control-label me-2">Category <span class="requrid">*</span></label>
                            <input type="text" id="CategoryName"  placeholder="Input Category" class="form-control col-sm-7" onchange="clearRequiredMsg(this)">
                        </div>

                        <!-- Status -->
                        <div class="col-lg-5 d-flex align-items-center">
                            <label for="Status" class="form-control-label me-2">Status <span class="requrid">*</span></label>
                            <select class="form-control col-sm-7" id="Status" name="StatusAutoId" onchange="clearRequiredMsg(this)">
                                <option value="">Select Status</option>
                            </select>
                        </div>

                        <!-- Add Button -->
                        <div class="col-lg-2">
                            <button class="btn btn-primary w-100" id="Save">Save</button>
                        </div>
                    </div>

                </form>
               
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" style="text-align:center">Action</th>
                                    <th scope="col" style="text-align:center">Auto Id</th>
                                    <th scope="col" style="text-align:center">Category</th>
                                    <th scope="col" style="text-align:center">Status</th>
                                </tr>
                            </thead>
                            <tbody id="BlogCategory">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
 


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
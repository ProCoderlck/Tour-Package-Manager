
@{
    ViewBag.Title = "Duration_List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/DurationList.js?v=4.3.5"></script>

<div class="content">
    <div style="display:flex;align-items:center; justify-content:space-between" class="mb-2">
        <h4>Duration Management</h4>
        <a href="~/Duration/Add_Duration" class="btn btn-info btn-sm card-title" style="float:right">Add Duration</a>
    </div>
    <div class="card col-lg-12">
        <div class="card-header">
            <h>Duration List</h>
        </div>
        <div class="card-body card-block">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col" style="text-align:center">Auto Id</th>
                        <th scope="col" style="text-align:center">Duration Name</th>
                        <th scope="col"style="text-align:center">Status </th>
                        <th scope="col"style="text-align:center">Action</th>
                    </tr>
                </thead>
                <tbody id="Data">
                </tbody>
            </table>
        </div>
    </div>
</div>


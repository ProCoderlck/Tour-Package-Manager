
@{
    ViewBag.Title = "Add_Guides";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #photoBox {
        border: 2px solid #ccc;
        width: 70px;
        height: 70px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    img {
        max-width: 100%;
        max-height: 100%;
    }

    .requrid {
        color: red
    }
</style>
<script src="~/Scripts/Guide_Master.js"></script>
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div style="display:flex;align-items:center; justify-content:space-between" class="mb-2">
                <h4>Guide Management</h4>
                <a href="~/Guides/Guides_List" class="btn btn-info btn-sm card-title" style="float:right">Guide List</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h>Add Guide</h>
                </div>
                <div class="card-body card-block">
                    <form>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-6">
                                        <!---->
                                        <div class="row mb-4">
                                           
                                            <label for="Guide" class="pr-1  form-control-label col-sm-4">Guide Name <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <input type="text" id="GuideName" placeholder="Input Your Guide" class="form-control" onchange="clearRequiredMsg(this)">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="Photo" class="pr-1  form-control-label col-sm-4">Photo</label>
                                            <div class="col-sm-8">
                                                <input type="file" id="Photo" class="form-control">
                                                <div id="photoBox" style="margin-top:5px">
                                                    <div class="bi bi-image">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!---->
                                    </div>
                                    <div class="col-6">

                                        <div class="row mb-4">
                                            <label for="Designation" class="pr-1  form-control-label col-sm-4">Designation <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <input type="text" id="Designation" placeholder="Input Your Designation" class="form-control" onchange="clearRequiredMsg(this)">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-sm-8">
                                        <div class="form-actions form-group">
                                            <button class="btn btn-primary btn-sm" id="Save">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
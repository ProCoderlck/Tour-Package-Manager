
@{
    ViewBag.Title = "Add_Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #photoBox {
        border: 2px solid #ccc;
        width: 70px;
        height: 70px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    img {
        max-width: 100%;
        max-height: 100%;
    }

    .requrid {
        color: red
    }
</style>
<style>
    #photoBoxpdf {
        border: 2px solid #ccc;
        width: 70px;
        height: 70px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<script src="~/Scripts/PackageMaster.js?v=2.3.11"></script>

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div style="display:flex;align-items:center; justify-content:space-between" class="mb-2">
                <h4>Package Management</h4>
                <a href="~/Package/Package_List" class="btn btn-info btn-sm card-title" style="float:right">Package List</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h>Add Package</h>
                </div>
                <div class="card-body card-block">
                    <form>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-6">
                                        <!---->
                                        <div class="row mb-4">
                                            <label for="PackageName" class="pr-1  form-control-label col-sm-4">Package Name <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <input type="text" id="PackageName" placeholder="Input Package Name" class="form-control" onchange="clearRequiredMsg(this)">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="Duration" class="pr-1  form-control-label col-sm-4">Duration <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <select id="DurationName" class="form-select" aria-label="Default select example" onchange="clearRequiredMsg(this)">
                                                    <option selected>--Select Duration--</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label for="Category" class="pr-1  form-control-label col-sm-4">Category <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <select id="CategoryName" class="form-select" aria-label="Default select example" onchange="clearRequiredMsg(this)">
                                                    <option selected>--Select Category--</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label for="Location" class="pr-1  form-control-label col-sm-4">Location <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <select id="LocationName" class="form-select" aria-label="Default select example" onchange="clearRequiredMsg(this)">
                                                    <option selected>--Select Location--</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label for="StatusAutoId" class="pr-1  form-control-label col-sm-4">Status <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <select id="Status" class="form-select" aria-label="Default select example" onchange="clearRequiredMsg(this)">
                                                    <option value="">--Select Status--</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="StatusAutoId" class="pr-1  form-control-label col-sm-4">PackageImage</label>
                                            <div class="col-sm-8">
                                                <input type="file" id="PackageImage" class="form-control">
                                                <div id="photoBox" style="margin-top:5px">
                                                    <div class="bi bi-image">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!---->
                                    </div>
                                    <div class="col-6">
                                        <div class="row mb-4">
                                            <label for="DurationName" class="pr-1  form-control-label col-sm-4">Price <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <input type="text" id="Price" placeholder="Enter Price" class="form-control" onchange="clearRequiredMsg(this)">
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label for="PackageStart" class="pr-1  form-control-label col-sm-4">Package Start <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <input type="date" id="PackageStart" class="form-control" onchange="clearRequiredMsg(this)">
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label for="PackageEnd" class="pr-1  form-control-label col-sm-4">Package End <span class="requrid">*</span></label>
                                            <div class="col-sm-8">
                                                <input type="date" id="PackageEnd" class="form-control" onchange="clearRequiredMsg(this)">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="ShortDiscription" class="pr-1  form-control-label col-sm-4">Short Discription</label>
                                            <div class="col-sm-8">
                                                <textarea class="form-control" id="ShortDiscription" rows="2" cols="100" maxlength="200"></textarea>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label for="Discription" class="pr-1  form-control-label col-sm-4">Discription</label>
                                            <div class="col-sm-8">
                                                <textarea class="form-control" id="Discription" rows="2" cols="100" maxlength="200"></textarea>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label for="DurationName" class="pr-1  form-control-label col-sm-4">PackagePdf Name</label>
                                            <div class="col-sm-8">
                                                <input type="file" id="PackagePdf" class="form-control">
                                                <div id="photoBoxpdf" style="margin-top:5px">
                                                    <div class="bi bi-image">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-sm-8">
                                        <div class="form-actions form-group">
                                            <button class="btn btn-primary btn-sm" id="Save">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content" style=" margin-top: -66px;display:none" id="days">

    <div style="display: flex; align-items: center; justify-content: space-between;" class="mb-2">
        <h4>Days Management</h4>
        <div style="display: flex; gap: 10px;">
            <button type="button" class="btn btn-info btn-sm card-title" data-bs-toggle="modal" data-bs-target="#categoryModal" onclick="cleardays()">Add Days</button>
        </div>
    </div>

    <div class="card col-lg-12">
        <div class="card-header">
            <h>Days List</h>
        </div>
        <div class="card-body card-block">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col" style="text-align:center">Action</th>
                        <th scope="col" style="text-align:center">AutoId</th>
                        <th scope="col" style="text-align:center">Dyas Name</th>
                       <th scope="col" style="text-align:center">Total Task</th>
                    </tr>
                </thead>
                <tbody id="Data">
                </tbody>
            </table>
        </div>
    </div>
 </div>


<!-- Modal -->
<style>
    /* Custom Modal Width */
    .custom-modal {
        max-width: 900px; /* Adjust width as needed */
        width: 50%;
    }
</style>

<div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog custom-modal">
        <!-- Applied Custom Class -->
        <div class="modal-content">
            <div class="modal-header" style="float:inline-end">
                <h5 class="modal-title" id="categoryModalLabel" style="display:inline">Days Details</h5>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close" style="float:inline-end"></button>
            </div>

            <div class="card-body card-block">
                <form class="mb-3">
                    <div class="row align-items-center">
                        <div class="col-lg-10 d-flex align-items-center">
                            <label for="Category" class="form-control-label me-2 col-3">Name <span class="requrid">*</span></label>
                            <input type="text" id="DaysName" placeholder="Input Your Days" class="form-control col-sm-8" onchange="clearRequiredMsg(this)">
                        </div>
                        <div class="col-lg-2">
                            <button class="btn btn-info btn-sm card-title" id="Savedays">Save</button>
                        </div>
                    </div>

                </form>
                <div class="row">
                    <div class="col-lg-12" style="display:none" id="Task">
                        <div style="display: flex; align-items: center; justify-content: space-between;" class="mb-2">
                            <h4>Task List</h4>
                            <div style="display: flex; gap: 10px;">
                                <button type="button" class="btn btn-info btn-sm card-title" data-bs-toggle="modal" data-bs-target="#TaskModal">Add Task</button>
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" style="text-align:center">Action</th>
                                    <th scope="col" style="text-align:center">AutoId</th>
                                    <th scope="col" style="text-align:center">Task</th>
                                </tr>
                            </thead>
                            <tbody id="Datatask">
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

            </div>
    </div>
</div>
<!-- Modal -->
<style>
    /* Custom Modal Width */
    .custom-modal {
        max-width: 900px; /* Adjust width as needed */
        width: 50%;
    }
</style>

<div class="modal fade" id="TaskModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog custom-modal">
        <!-- Applied Custom Class -->
        <div class="modal-content">
            <div class="modal-header" style="float:inline-end">
                <h5 class="modal-title" id="categoryModalLabel" style="display:inline">Task Details</h5>
                <button type="button"onclick="openSecondModal()" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close" style="float:inline-end"></button>
            </div>

            <div class="card-body card-block">
                <form class="mb-3">
                    <div class="row align-items-center">
                        <!-- Category -->
                        <div class="col-lg-10 d-flex align-items-center">
                            <label for="Task" class="form-control-label me-2 col-3">Task <span class="requrid">*</span></label>
                            <textarea type="text" id="TaskName" placeholder="Input Your Task" class="form-control col-sm-8"rows="2" onchange="clearRequiredMsg(this)"></textarea>
                        </div>
                        <!-- Add Button -->
                        <div class="col-lg-2">
                            <button class="btn btn-primary w-100" id="SaveTask">Save</button>
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>




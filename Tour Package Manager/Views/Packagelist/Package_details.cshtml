
@{
    ViewBag.Title = "Package_details";
    Layout = "~/Views/Shared/Masterpage.cshtml";
}
<style>
    .price-box {
        font-size: 18px;
        font-weight: bold;
        display: inline-block;
    }

    .duration-box, .price-box {
        font-weight: bold;
        font-size: 16px;
    }
</style>

<script src="~/Scripts/Package_details_Web.js?v=4.6.3"></script>

<!-- Header End -->
<!-- Blog Start -->
<div class="container-fluid py-3">
    <div class="container py-3">
        <div class="row">
            <div class="col-lg-8">
                <!-- Blog Detail Start -->
                <div class="pb-3">

                    <div class="bg-white mb-3" style="padding: 20px;">
                        <div class="d-flex justify-content-between">
                            <h2 class="mb-3" id="PackageName"></h2>
                            <h6 class="m-0" style="text-align:right">
                                <i class="fa fa-star text-primary mr-2"></i> 4.5
                                <small class="text-muted">(250)</small>
                            </h6>
                        </div>
                        <a class="text-primary text-uppercase text-decoration-none" href="" id="duration"></a>
                        <span class="text-primary px-2">|</span>
                        <a class="text-primary text-uppercase text-decoration-none" href="" id="location"></a>
                        <span class="text-primary px-2">|</span>
                        <a class="text-primary text-uppercase text-decoration-none" href="" id="category"></a>


                    </div>
                    <div class="blog-item">
                        <div class="position-relative">
                            <img class="img-fluid w-100" src="" alt="" id="Photo">
                        </div>
                    </div>
                    <div class="bg-white mb-3" style="padding: 20px;">
                        <p id="shordis">
                        </p>
                        <img class="img-fluid w-50 float-left mr-4 mb-2" src="" id="Photo">
                        <p id="dis">
                        </p>
                    </div>
                </div>
                <!-- Blog Detail End -->
                <!-- Shedule List Start -->

                <div class="bg-white" style="padding: 30px; margin-bottom: 30px;"id="dayslist">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px;">Schedule Details</h4>
                </div>
                <!-- Comment List End -->
                <!-- Comment Form Start -->
                <div class="bg-white mb-3" style="padding: 30px;">
                    <h4 class="text-uppercase mb-4"  style="letter-spacing: 5px;">Leave a comment</h4>
                    <form>
                        <div class="form-group">
                            <label for="name">Name *</label>
                            <input type="text" class="form-control" id="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" class="form-control" id="email">
                        </div>
                        <div class="form-group">
                            <label for="website">Website</label>
                            <input type="url" class="form-control" id="website">
                        </div>

                        <div class="form-group">
                            <label for="message">Message *</label>
                            <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                        </div>
                        <div class="form-group mb-0">
                            <input type="submit" value="Leave a comment"
                                   class="btn btn-primary font-weight-semi-bold py-2 px-3">
                        </div>
                    </form>
                </div>
                <!-- Comment Form End -->
            </div>

            <div class="col-lg-4 mt-5 mt-lg-0">
                <!-- Author Bio -->
                <div class="d-flex flex-column text-center bg-white mb-5 py-5 px-4">
                    <div class="d-flex justify-content-between align-items-center">

                        <!-- Duration Box -->
                        <div class="duration-box bg-secondary text-white px-3 py-1 rounded">
                            <h6 class="m-0" id="duration">Per Person :</h6>
                        </div>

                        <!-- Price Box -->
                        <div class="price-box bg-primary text-white px-3 py-1 rounded">
                            <h5 class="m-0" id="price"></h5>
                        </div>

                    </div>
                </div>


                <!-- Category List -->
                <div class="mb-5">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px;">Categories</h4>
                    <div class="bg-white" style="padding: 30px;">
                        <ul class="list-inline m-0" id="Packagecategory">
                            @*======*@
                        </ul>
                    </div>
                </div>

                <!-- Recent Post -->

                <div class="mb-5">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px;">Recent Post</h4>
                    <div class="blog-item" id="RecentPackage">

                    </div>
                </div>

                <!-- Tag Cloud -->
                <div class="mb-5">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px;">Tag Cloud</h4>
                    <div class="d-flex flex-wrap m-n1">
                        <a href="" class="btn btn-light m-1">Design</a>
                        <a href="" class="btn btn-light m-1">Development</a>
                        <a href="" class="btn btn-light m-1">Marketing</a>
                        <a href="" class="btn btn-light m-1">SEO</a>
                        <a href="" class="btn btn-light m-1">Writing</a>
                        <a href="" class="btn btn-light m-1">Consulting</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Blog End -->
